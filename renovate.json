{
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "npm",
      "groupSlug": "all",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDatasources": ["npm"],
      "matchPackagePatterns": [
        "package.json"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "groupName": "docker",
      "groupSlug": "all",
      "matchDatasources": ["docker"],
    }
  ],
  "dependencyDashboard": true,
  "separateMajorMinor": false
}
