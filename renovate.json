{
   "groupName": "all dependencies",
   "groupSlug": "all",
   "dependencyDashboard": true,
   "lockFileMaintenance": {
      "enabled": false
   },
   "packageRules": [
      {
         "groupName": "npm",
         "groupSlug": "all",
         "automerge": false,
         "matchUpdateTypes": ["minor", "patch"],
         "matchDatasources": ["npm"],
         "matchPackagePatterns": ["package.json", "package-lock.json"],
         "automerge": false,
         "labels": ["node"],
         "dependencyDashboardApproval": true
      },
      {
         "groupName": "docker",
         "groupSlug": "iac",
         "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
         "matchDatasources": ["docker"],
         "automerge": false,
         "labels": ["docker"]
      }
   ]
}
